{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "functions-dist",
    "rootDir": "functions",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["functions/**/*.ts"],
  "exclude": ["node_modules"]
} 