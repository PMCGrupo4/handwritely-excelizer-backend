{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "functions",
    "rootDir": "src/functions",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/functions/**/*"],
  "exclude": ["node_modules"]
} 